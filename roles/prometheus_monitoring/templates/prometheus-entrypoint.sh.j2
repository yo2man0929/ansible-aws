#!/bin/sh

set -ex

# Try to get instance metadata if running in AWS
INSTANCE_ID=$(wget -qO- --timeout=1 http://169.254.169.254/latest/meta-data/instance-id 2>/dev/null || echo "unknown")
INSTANCE_TYPE=$(wget -qO- --timeout=1 http://169.254.169.254/latest/meta-data/instance-type 2>/dev/null || echo "unknown")
AZ=$(wget -qO- --timeout=1 http://169.254.169.254/latest/meta-data/placement/availability-zone 2>/dev/null || echo "unknown")
INSTANCE_NAME=$(wget -qO- --timeout=1 http://169.254.169.254/latest/meta-data/tags/instance/Name 2>/dev/null || hostname)

# Fallback to hostname if not in AWS
if [ "$INSTANCE_NAME" = "unknown" ]; then
  INSTANCE_NAME=$(hostname)
fi

cat <<EOF > /etc/prometheus/prometheus.yml
global:
  scrape_interval: 15s
  evaluation_interval: 15s

scrape_configs:
  - job_name: 'ec2-node-exporter'
    static_configs:
      - targets: ['node-exporter:9100']
    relabel_configs:
      - target_label: instance_id
        replacement: "$INSTANCE_NAME"
      - target_label: instance_type
        replacement: "$INSTANCE_TYPE"
      - target_label: availability_zone
        replacement: "$AZ"

  - job_name: 'ec2-cadvisor'
    static_configs:
      - targets: ['cadvisor:8080']
    relabel_configs:
      - target_label: instance_id
        replacement: "$INSTANCE_NAME"
      - target_label: instance_type
        replacement: "$INSTANCE_TYPE"
      - target_label: availability_zone
        replacement: "$AZ"

{% if prometheus_remote_write_url | length > 0 %}
remote_write:
  - url: "{{ prometheus_remote_write_url }}"
{% endif %}
EOF

exec /bin/prometheus \
  --config.file=/etc/prometheus/prometheus.yml \
  --storage.tsdb.path=/prometheus \
  --web.enable-lifecycle \
  --enable-feature=agent-mode

